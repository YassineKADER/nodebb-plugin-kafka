{
	"id": "nodebb-plugin-kafka",
	"url": "https://github.com/YassineKader/nodebb-plugin-kafka",
	"library": "./library.js",
	"hooks": [
		{ "hook": "static:app.load", "method": "init" },
        { "hook": "action:topic.create", "method" : "handelPosts"},
        { "hook": "action:topic.save", "method" : "handelPosts"},
        { "hook": "action:post.save", "method" : "handelPosts"},
        { "hook": "action:post.edit", "method" : "handelPosts"},
        { "hook": "filter:uploadImage", "method" : "handelUploads"},
		{ "hook": "static:api.routes", "method": "addRoutes" },
		{ "hook": "filter:admin.header.build", "method": "addAdminNavigation" }
	],
	"staticDirs": {
		"static": "./static"
	},
	"scss": [
		"scss/quickstart.scss"
	],
	"scripts": [
		"public/lib/main.js"
	],
	"acpScripts": [
		"public/lib/acp-main.js"
	],
	"modules": {
		"../client/quickstart.js": "./public/lib/quickstart.js",
		"../admin/plugins/quickstart.js": "./public/lib/admin.js"
	},
	"templates": "templates"
}
